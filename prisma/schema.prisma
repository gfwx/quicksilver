datasource db {
  provider = "sqlite"
}

generator client {
  provider      = "prisma-client"
  binaryTargets = ["linux-musl-openssl", "linux-musl-arm64-openssl-3.0.x", "native"]
  engineType    = "client"
}

model User {
  id                 String    @id
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  profileName        String    @default("New Profile")
  lastOpened         DateTime?
  profilePictureUrl  String?
  profileDescription String?

  projects Project[]
  File     File[]
}

model File {
  id           String   @id
  filename     String
  encoding     String
  originalname String
  size         Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  status       String

  projectId     String
  parentProject Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  userId     String
  uploadedBy User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id             String   @id
  projectTitle   String
  projectContext String
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  projectTags    String

  fileCount Int @default(0)
  chatCount Int @default(0)

  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  files  File[]
  Chats  Chats[]
}

model Chats {
  id        String @id
  chatTitle String

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
}
